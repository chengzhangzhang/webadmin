extends ../PublicViews/public
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span
      i.icon-table
      |  订单详情
  .mws-panel-body.no-padding
    #DataTables_Table_1_wrapper.dataTables_wrapper(role='grid')

      table#DataTables_Table_1.mws-datatable-fn.mws-table.dataTable(aria-describedby='DataTables_Table_1_info')
        thead
          tr(role='row')
           th.sorting_asc(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-sort='ascending' aria-label='Rendering engine: activate to sort column descending' style='width: 189px;') 序号
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Browser: activate to sort column ascending' style='width: 247px;') 食品名称
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 227px;') 食品图片
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 227px;') 数量
        tbody(role='alert' aria-live='polite' aria-relevant='all')
         if(data.length>0)
          -for(var i=0;i<data.length;i++)
           tr.odd
             td.sorting_1 #{data[i].id}
             td.Firefox #{data[i].foodname}
             td.Firefox #{data[i].pic}
             td.Firefox #{data[i].count}
         else 
            h2(style="color:white") 该订单还没有详情信息
